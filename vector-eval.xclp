/* rules for vector space evaluation */

define defmodule(
    Eval,
    import(Vectorize, deftemplate, vector-relation)
)

module Eval.

include "vrg-sugar.xclp".

?a <//> ?b, ?b <?R> ?c
=> ?a <?R> ?c.

?a <T> ?b; ?a <X> ?b => ?a <~//> ?b.

?a <T> ?b, ?b <T> ?c, ?c <T> ?d, ?d <T> ?a, ?a <~//> ?c
=> ?b <//> ?d.

?a <?R> ?b => ?b <?R> ?a.
