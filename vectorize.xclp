define defmodule(Vectorize,
    export(deftemplate, vector-relation),
    export(deftemplate, space-relation))

include "preprocess.xclp"

/* vectorization rules */

include "vrg-sugar.xclp"

module Vectorize.

/* line-line relationships */

\?a, \?b, ?a [?R] ?b => ?a <?R> ?b.

/* line-plane relationships */

\?a, #?b, ?a [T] ?b  => ?a <//> ?b.
\?a, #?b, ?a [//] ?b => ?a <T> ?b.
\?a, #?b, ?a [X] ?b  => ?a <X> ?b.

\?a, #?b, ?a [~T] ?b  => ?a <~//> ?b.
\?a, #?b, ?a [~//] ?b => ?a <~T> ?b.
\?a, #?b, ?a [~X] ?b  => ?a <~X> ?b.

\?a, #?b, ?a [on] ?b => ?a <T> ?b.

/* plane-plane relationships */

#?a, #?b, ?a [?R] ?b => ?a <?R> ?b.
