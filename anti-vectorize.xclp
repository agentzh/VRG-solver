define defmodule(AntiVectorize,
    import(Vectorize, deftemplate, ?ALL)
)

/* vectorization rules */

include "vrg-sugar.xclp"

module AntiVectorize.

/* line-line relationships */

\?a, \?b, ?a <?R> ?b => ?a [?R] ?b.

/* line-plane relationships */

\?a, #?b, ?a <//> ?b => ?a [T] ?b.
\?a, #?b, ?a <T> ?b => ?a [~T] ?b, ?a [~X] ?b.
\?a, #?b, ?a <X> ?b => ?a [X] ?b.

\?a, #?b, ?a <~//> ?b => ?a [~T] ?b.
\?a, #?b, ?a <~T> ?b => ?a [~//] ?b, ?a [~on] ?b.
\?a, #?b, ?a <~X> ?b => ?a [~X] ?b.

\?a, #?alpha, #?beta, ?a [on] ?alpha, ?alpha [//] ?beta => ?a [~on] ?beta.
\?a, #?b, ?a [~T] ?b, ?a [~X] ?b, ?a [~on] ?b => ?a [//] ?b.

/* plane-plane relationships */

#?a, #?b, ?a <?R> ?b => ?a [?R] ?b.
